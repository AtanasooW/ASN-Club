@using ASNClub.Infrastructure.Extensions;
@using ASNClub.ViewModels.Order;
@{
    ViewBag.Title = "My order";
}
@model MyOrderDetailsViewModel
<div class="col-lg-8">
    <div class="col-md-6">
        <div class="card mb-4 mb-md-0">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Number of order</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Order.Id</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Date of order</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Order.OrderDate</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Total price</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Order.OrderTotal</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Status</p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.Order.OrderStatus</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Address </p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.ShippingAddress.Country - @Model.ShippingAddress.City @Model.ShippingAddress.Street1 @Model.ShippingAddress.StreetNumber - @Model.ShippingAddress.PostalCode</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Information about the person </p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.FirstName @Model.SurnameName (@Model.PhoneNumber) - @Model.Email</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <p class="mb-0">Information about the person </p>
                    </div>
                    <div class="col-sm-9">
                        <p class="text-muted mb-0">@Model.FirstName @Model.SurnameName (@Model.PhoneNumber) - @Model.Email</p>
                    </div>
                </div>
                <hr>
                <div><a asp-controller="Admin" asp-action="EditStatus" asp-route-id="@Model.Order.Id" class="btn btn-primary mt-3" style="text-decoration: none">Edit status</a></div>
                <hr>

            </div>
        </div>
    </div>
    <div class="card-body">
        @foreach (var product in Model.Products)
        {
            <partial name="_OrderItemPartial" model="product"></partial>
        }
    </div>
</div>