<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Sign up</h2>
                                <p class="text-white-50 mb-5">Please enter your login and password and confirm passoword!</p>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Input.Email" type="email" id="typeEmailX" class="form-control form-control-lg" autocomplete="username" aria-required="true" />
                                    <label asp-for="Input.Email" class="form-label" for="typeEmailX">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input asp-for="Input.Password" type="password" id="typePasswordX" class="form-control form-control-lg" autocomplete="current-password" aria-required="true" />
                                    <label asp-for="Input.Password" class="form-label" for="typePasswordX">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class ="form-outline form-white mb-4">
                                <input asp-for="Input.ConfirmPassword" type="password" id="typePasswordX" class="form-control form-control-lg" autocomplete="new-password" aria-required="true"/>
                                <label asp-for="Input.ConfirmPassword" class="form-label" for="typePasswordX">Confirm password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                
                                <button id="registerSubmit" class="btn btn-outline-light btn-lg px-5" type="submit">Sign up</button>

                                <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                    <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                    <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                    <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                                </div>

                            </div>

                            <div>
                                <p class="mb-0">
                                    Do you have an account? <a href="" class="text-white-50 fw-bold">Sign In</a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

